{
  "name": "education-erp-system",
  "version": "1.0.0",
  "description": "Complete Education ERP System (CMS + LMS + IMS)",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:watch\" \"npm run client\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "server": "node backend/server.js",
    "server:watch": "cd backend && nodemon server.js",
    "client": "cd frontend && npm run dev",
    "client:win": "cd frontend && npm run dev",
    "install-all": "npm install && cd frontend && npm install",
    "create-admin": "node backend/scripts/createAdmin.js",
    "start:backend": "node backend/server.js",
    "start:frontend": "cd frontend && npm run dev"
  },
  "keywords": [
    "education",
    "erp",
    "lms",
    "cms",
    "ims"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "react-datepicker": "^9.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
